$breakPointSmall = 340px
$breakPointMedium = 768px
$breakPointLarge = 840px

$contentMaxWidth = 1280px

clearfix()
  zoom: 1

  &:before, &:after
    content: ''
    display: table

  &:after
    clear: both

responsive-font-display4()
  zp-font-display4()

responsive-font-display3()
  zp-font-display3()
  @media (min-width: $breakPointLarge)
    font-size: 72px

responsive-font-display2()
  zp-font-display2()
  @media (min-width: $breakPointLarge)
    font-size: 56px

responsive-font-display1()
  zp-font-display1()
  @media (min-width: $breakPointLarge)
    font-size: 45px

responsive-font-headline()
  zp-font-headline()
  @media (min-width: $breakPointLarge)
    font-size: 34px

responsive-font-title()
  zp-font-title()
  @media (min-width: $breakPointLarge)
    font-size: 24px

responsive-font-subhead()
  zp-font-subhead()
  @media (min-width: $breakPointLarge)
    font-size: 20px

responsive-font-body2()
  zp-font-body2()
  @media (min-width: $breakPointLarge)
    font-size: 16px

responsive-font-body1()
  zp-font-body1()
  @media (min-width: $breakPointLarge)
    font-size: 16px

responsive-font-caption()
  zp-font-caption()
  @media (min-width: $breakPointLarge)
    font-size: 14px
