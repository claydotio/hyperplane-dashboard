@require 'zorium-paper/base'

json('zorium-paper/colors.json')

.z-metrics
  > .user-filter
    margin: 16px
    display: flex

    > .zp-input
      flex: 1

  > .overview
    display: flex

    > .app
      flex: 1
      margin: 16px
      padding: 20px
      background: $green500
      color: $green500Text

      > .name
        zp-font-title()
        color: $green500Text

      > .aggregate
        > .name
          padding: 2px 16px 2px 0


  > .graphs
    > .metric
      box-sizing: border-box
      border: 2px solid $black26
      padding: 16px
      margin: 16px
