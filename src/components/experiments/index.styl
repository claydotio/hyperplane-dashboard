@require 'zorium-paper/base'

json('zorium-paper/colors.json')

.z-experiments
  display: flex

  > .create-experiment
    display: none

  > .list
    zp-font-subhead()
    width: 200px
    padding: 32px 0

    > .fab
      display: flex
      justify-content: center
      padding: 20px

    > .experiment
      padding-left: 16px

      &:hover
        cursor: pointer
        background: rgba(0, 0, 0, 0.03)

      &.is-selected
        background: rgba(0, 0, 0, 0.06)

  > .results
    flex: 1

  &.is-creating
    > .create-experiment
      display: block
