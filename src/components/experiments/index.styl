@require 'zorium-paper/base'

json('zorium-paper/colors.json')

.z-experiments
  display: flex

  > .create-experiment
    display: none

  > .list
    padding: 16px

    > .fab
      display: flex
      justify-content: center
      padding: 20px

    > .apps-group
      margin-bottom: 20px

      > .name
        zp-font-title()

      > .experiments
        > .experiment
          zp-font-subhead()
          padding-left: 16px

          &:hover
            cursor: pointer
            background: rgba(0, 0, 0, 0.03)

          &.is-selected
            background: rgba(0, 0, 0, 0.06)

  > .results
    flex: 1

  &.is-creating
    > .create-experiment
      display: block
