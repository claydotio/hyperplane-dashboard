@require 'zorium-paper/base'

json('zorium-paper/colors.json')

.z-experiment-results
  border: 2px solid $black
  margin: 32px 16px 0 0

  > .about
    padding: 16px
    border-bottom: 2px solid $black

  > .actions
    padding: 16px
    border-bottom: 2px solid $black

  > .data
    padding: 16px
    border-bottom: 2px solid $black

    > table
      width: 100%
      text-align: left

      > tr
        border-bottom: 2px solid $black12

        > th
          color: $black54

        > td, > th
          padding: 16px

        > td
          background: $grey100

          &.is-label
            padding: 0
            background: transparent

            > .zp-radio-button
              vertical-align: middle

          &.is-conclusive.is-significant
            background: $red100

          &.is-conclusive.is-significant.is-better
            background: $green100

          > .percent
            color: $green500
            &.is-negative
              color: $red500
            &.is-neutral
              color: $black

  > .chart
    padding: 16px
