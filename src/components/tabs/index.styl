json('zorium-paper/colors.json')

.z-tabs
  height: 48px
  display: flex
  position: relative

  > .selector
    transition: left 0.25s
    height: 2px
    background: $amberA200
    position: absolute
    bottom: 0

  > .tab
    flex: 1
    color: $white70
    text-align: center
    line-height: 48px
    text-transform: uppercase
    font-weight: 500

    &:hover
      cursor: pointer
      background: rgba(255, 255, 255, 0.05)

    &.is-selected
      color: $white
